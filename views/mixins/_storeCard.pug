mixin storeCard(store = {})
  div.store
    div.store__hero
      div.store__action
        button soon
      img(src=`/uploads/${store.photo || 'store.png'}`)
      h2.title
        a(href=`store/${store.slug}`) #{store.name}
    .store__details
      p= store.description.split(' ').slice(0, 20).join(' ')